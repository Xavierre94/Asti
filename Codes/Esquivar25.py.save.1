def turnRight(angle):
    duty = float(angle) / 10.0 + 2.5
    high = int(duty*pwmMax)
    low= int (pwmMax*(1-duty))
    pwm.set_pwm(0,high,low)
def turnLeft(angle):
    duty = float(angle) / 10.0 + 2.5
    high = int(1-duty)*pwmMax
    low= int(pwmMax*duty)
    pwm.set_pwm(0,high,low)
